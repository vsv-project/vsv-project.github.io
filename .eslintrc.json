{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": [
    "airbnb-typescript",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "indent": ["warn", 2],
    "no-shadow": 0,
    "@typescript-eslint/no-shadow": ["error"],
    "react/jsx-filename-extension": [0, { "allow": "as-needed" }],
    "import/no-extraneous-dependencies": [0],
    "import/extensions": [0]
  }
}